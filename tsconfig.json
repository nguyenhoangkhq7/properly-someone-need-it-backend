{
  "compilerOptions": {
    "removeComments": true,
    "noEmitOnError": true,

    "rootDir": "./src",
    "outDir": "./dist",

    // ĐỔI 2 DÒNG NÀY THÀNH COMMONJS
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "target": "es2022",
    "lib": ["es2022"],

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "src/scripts/**/*", "*.ts"],
  "exclude": ["node_modules", "dist"]
}
